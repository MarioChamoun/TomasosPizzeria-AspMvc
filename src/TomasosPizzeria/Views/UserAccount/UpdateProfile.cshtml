@model TomasosPizzeria.Models.Kund
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "UpdateProfile";
}

<h2>Update Profile</h2>
<div>
    @if (ViewBag.Updated != null)
    {
        <h4 class="success">@ViewBag.Updated</h4>

    }
</div>
<form asp-action="UpdateProfile">
    <div class="form-horizontal">
        <h4>@Context.Session.GetString("Username")</h4>
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">Användarnamn</label>
            <div class="col-md-10">
                <input asp-for="AnvandarNamn" value="@Context.Session.GetString("Username")" class="form-control" />
                <span asp-validation-for="AnvandarNamn" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" value="@Context.Session.GetString("Email")" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gatuadress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Gatuadress" value="@Context.Session.GetString("Gatuadress")" class="form-control" />
                <span asp-validation-for="Gatuadress" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Losenord" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Losenord" type="password" class="form-control" />
                <span asp-validation-for="Losenord" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Namn" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Namn" value="@Context.Session.GetString("Namn")" class="form-control" />
                <span asp-validation-for="Namn" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Post nummer</label>
            <div class="col-md-10">
                <input asp-for="Postnr" value="@Context.Session.GetString("Postnr")" class="form-control" />
                <span asp-validation-for="Postnr" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Postort" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Postort" value="@Context.Session.GetString("Postort")" class="form-control" />
                <span asp-validation-for="Postort" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Telefon" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Telefon" value="@Context.Session.GetString("Telefon")" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
