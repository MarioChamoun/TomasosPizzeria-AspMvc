@model TomasosPizzeria.Models.Kund

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>
<div>
    @if (ViewBag.Message != null)
    {
        <h4 class="success">@ViewBag.Message</h4>

    }
</div>
<form asp-action="Register">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">Användar Namn</label>
            <div class="col-md-10">
                <input asp-for="AnvandarNamn" class="form-control" />
                <span asp-validation-for="AnvandarNamn" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gatuadress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Gatuadress" class="form-control" />
                <span asp-validation-for="Gatuadress" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Lösenord</label>
            <div class="col-md-10">
                <input asp-for="Losenord" type="password" class="form-control" />
                <span asp-validation-for="Losenord" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Namn" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Namn" class="form-control" />
                <span asp-validation-for="Namn" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Post Nummer</label>
            <div class="col-md-10">
                <input asp-for="Postnr" class="form-control" />
                <span asp-validation-for="Postnr" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Postort" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Postort" class="form-control" />
                <span asp-validation-for="Postort" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Telefon" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrera" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
